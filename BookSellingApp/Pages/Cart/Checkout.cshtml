@page
@model BookSellingApp.Pages.Cart.CheckoutModel
@{
    Layout = "_Layout";
}
<!-- checkout-area start -->
<div class="checkout-area pb-100 pt-15 pb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="checkbox-form mb-sm-40">
                    <h3>Billing Details</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="checkout-form-list">
                                <label>Email <span class="required">*</span></label>
                                <p>@Model.GetUser.Email</p>
                            </div>
                        </div>
                       
                        <div class="col-md-12">
                            <div class="checkout-form-list mb-30">
                                <label>Phone Number</label>
                                <p>@Model.GetUser.Phonenumber</p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="checkout-form-list">
                                <label>Address <span class="required">*</span></label>
                                <p>@Model.GetUser.Address</p>
                            </div>
                        </div>
                       
                    </div>
                   
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
               
                <form method="post" >
                <div class="your-order">
                    
                    <h3>Your order</h3>
                    <div class="your-order-table table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-name">Product</th>
                                    <th class="product-total">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.cart)
                                {
                                    <tr class="cart_item">
                                        <td class="product-name">
                                            @item.ProductName <span class="product-quantity"> × @item.Quantity</span>
                                        </td>
                                        <td class="product-total">
                                            <span class="amount">£@item.Price</span>
                                        </td>
                                    </tr>
                                    
                                }
                               
                            </tbody>
                            <tfoot>
                                <tr class="cart-subtotal">
                                    <th>Cart Subtotal</th>
                                    <td><span class="amount">£@Model.totalPrice</span></td>
                                </tr>
                                <tr class="order-total">
                                    <th>Order Total</th>
                                    <td>
                                        <span class=" total amount">£@Model.totalPrice</span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingone">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Order
                                </button>
                            </h5>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingone" data-parent="#accordion">
                            <div class="card-body">
                                <p>....</p>
                            </div>
                        </div>
                       
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- checkout-area end -->