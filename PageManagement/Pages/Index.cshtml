@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}

<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Static</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-xl-3">
                    <div class="card-box">
                        <h4 class="header-title1 mt-0 mb-2">Total Order</h4>
                        <div class="mt-1">
                            <div class="text-right1">
                                <h2 class="mt-3 pt-1 mb-1">@Model.TotalOrders </h2>
                                <p class="text-muted mb-0">@Model.NewOrdersThisWeek Since last week</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card-box">
                        <h4 class="header-title1 mt-0 mb-2">Total Revenue</h4>
                        <div class="mt-1">
                            <div class="text-right1">
                                <h2 class="mt-3 pt-1 mb-1">@Model.TotalRevenue $</h2>
                                <p class="text-muted mb-0">@Model.RevenueThisWeek Since last week</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card-box">
                        <h4 class="header-title1 mt-0 mb-2">Total Product</h4>
                        <div class="mt-1">
                            <div class="text-right1">
                                <h2 class="mt-3 pt-1 mb-1">@Model.TotalProducts </h2>                          
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card-box">
                        <h4 class="header-title1 mt-0 mb-2">Total User</h4>
                        <div class="mt-1">
                            <div class="text-right1">
                                <h2 class="mt-3 pt-1 mb-1">@Model.TotalUsers </h2>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div> <!-- container -->
    </div> <!-- content -->
</div>
  

</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
